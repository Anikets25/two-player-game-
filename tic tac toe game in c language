#include <stdio.h>

char board[3][3];  // 3x3 game board

// Function to initialize the board with numbers 1â€“9
void initializeBoard() {
    int count = 1;
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            board[i][j] = count + '0';
            count++;
        }
    }
}

// Function to print the current board
void printBoard() {
    printf("\n");
    for (int i = 0; i < 3; i++) {
        printf(" %c | %c | %c \n", board[i][0], board[i][1], board[i][2]);
        if (i < 2) printf("---|---|---\n");
    }
    printf("\n");
}

// Function to check for a win
char checkWin() {
    // Check rows and columns
    for (int i = 0; i < 3; i++) {
        if ((board[i][0] == board[i][1] && board[i][1] == board[i][2]) || 
            (board[0][i] == board[1][i] && board[1][i] == board[2][i]))
            return board[i][i];
    }

    // Check diagonals
    if ((board[0][0] == board[1][1] && board[1][1] == board[2][2]) || 
        (board[0][2] == board[1][1] && board[1][1] == board[2][0]))
        return board[1][1];

    return ' '; // No winner yet
}

// Function to check if the board is full (draw)
int isBoardFull() {
    for (int i = 0; i < 3; i++)
        for (int j = 0; j < 3; j++)
            if (board[i][j] != 'X' && board[i][j] != 'O')
                return 0;
    return 1;
}

// Function to make a move
int makeMove(int cell, char player) {
    int row = (cell - 1) / 3;
    int col = (cell - 1) % 3;

    if (cell < 1 || cell > 9 || board[row][col] == 'X' || board[row][col] == 'O') {
        return 0;  // Invalid move
    }

    board[row][col] = player;
    return 1;
}

int main() {
    int move;
    char player = 'X';
    char winner = ' ';

    initializeBoard();

    while (1) {
        printBoard();
        printf("Player %c, enter your move (1-9): ", player);
        scanf("%d", &move);

        if (!makeMove(move, player)) {
            printf("Invalid move. Try again.\n");
            continue;
        }

        winner = checkWin();
        if (winner == 'X' || winner == 'O') {
            printBoard();
            printf("ðŸŽ‰ Player %c wins!\n", winner);
            break;
        }

        if (isBoardFull()) {
            printBoard();
            printf("It's a draw!\n");
            break;
        }

        player = (player == 'X') ? 'O' : 'X';  // Switch player
    }

    return 0;
}
